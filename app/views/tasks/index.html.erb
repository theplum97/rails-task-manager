<h1>My tasks</h1>
<br>
<ul>
  <% @tasks.each do |task| %>
    <li><%= check_box_tag('completed', value = "1", checked = task.completed) %> <%= link_to task.title, task_path(task) %>  <%= link_to task_path(task), method: :delete, data: { confirm: "Are you sure you want to delete this task?" }  do %><i class="fas fa-trash"></i><% end %>
    </li>
  <% end %>
</ul>

<%= link_to "Add a new task", tasks_new_path %>
